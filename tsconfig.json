{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Генерирует ESM-код
    "moduleResolution": "NodeNext", // Совместимость с Node.js
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
